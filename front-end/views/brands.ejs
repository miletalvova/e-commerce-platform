<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../stylesheets/navbar.css">
    <link rel="stylesheet" href="../stylesheets/products.css">
    <link rel="stylesheet" href="../stylesheets/styles.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">   
    <title>Brands</title>
</head>
<body class="position-relative" data-bs-spy="scroll" >
    <%- include('./partials/navbar.ejs') %>
    <div class="container position-relative">

    <div class="d-flex justify-content-start p-2">
        <h3 class="mx-1">Brands</h3>
        <span class="align-self-center">Manage brands for products</span>
    </div>
    <div class="d-grid gap-1 d-md-flex justify-content-md-end">
            <button type="button" id="addbrand" type="submit" class="btn btn-info addbrand" data-bs-toggle="modal" data-bs-target="#addBrandModal">
                <i class="bi bi-plus"></i> Add New
            </button>
    </div>
    </div>
    </div>
       <div id="frame" class="container-xxl position-relative pt-4 pb-3">

        <div class="line-with-text position-absolute w-100">
            <span class="text">Current brands</span>
        </div>
   
    <div class="table-responsive">
    <table class="table table-hover table-striped table-bordered mt-4">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Options</th>
            </tr>
        </thead>
        <tbody>
            <% brands.forEach(brand => { %>
                <tr>
                    <td><%= brand.id %></td>
                    <td><%= brand.brand %></td>                  
                    <td>
                        <form action="/brands/<%= brand.id %>" method="POST" style="display:inline-block">
                            <button type="submit" class="btn btn-danger"><i class="bi bi-trash3-fill"></i></button>
                        </form>
                        
                        <button type="button" class="btn btn-warning editbrand" data-bs-toggle="modal" data-bs-target="#editBrandModal" brand-id="<%= brand.id %>" brand-name="<%= brand.brand %>">
                            <i class="bi bi-pencil"></i>
                        </button>
                        
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
    </div>
</div>

    <div class="modal fade" id="editBrandModal" tabindex="-1" role="dialog" aria-labelledby="editBrandModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="editBrandModalLabel">Edit Brand Details</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form id="editBrandForm">
                        <input type="hidden" id="brandId">
                        <div class="form-group">
                            <label for="brandName">Name</label>
                            <input type="text" class="form-control" id="brandName" required>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary" id="saveBrand">Save changes</button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="addBrandModal" tabindex="-1" role="dialog" aria-labelledby="addBrandModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addBrandModalLabel">Add a New Brand</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form id="addBrandForm">
                        <input type="hidden" id="brandId">
                        <div class="form-group">
                            <label for="brandName">Name</label>
                            <input type="text" class="form-control" id="brandAdd" required>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary" id="save">Save changes</button>
                </div>
            </div>
        </div>
    </div>

    <%- include('./partials/scripts.ejs') %>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>