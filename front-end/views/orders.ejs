<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../stylesheets/navbar.css">
    <link rel="stylesheet" href="../stylesheets/products.css">
    <link rel="stylesheet" href="../stylesheets/styles.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">   
    <title>Brands</title>
</head>
<body class="position-relative" data-bs-spy="scroll" >
    <%- include('./partials/navbar.ejs') %>
    <div class="container position-relative">

        <div class="d-flex justify-content-start p-2">
            <h3 class="mx-1">User Orders</h3>
            <span class="align-self-center">Manage current user's orders</span>
        </div>
    </div>
  
       <div id="frame" class="container-xxl position-relative pt-4 pb-3">

        <div class="line-with-text position-absolute w-100">
            <span class="text">Orders</span>
        </div>
   
    <div class="table-responsive">
    <table class="table table-hover table-striped table-bordered mt-4">
        <thead>
            <tr>
                <th>Id</th>
                <th>Order Number</th>
                <th>Created</th>
                <th>Updated</th>
                <th>User Id</th>
                <th>Order Status</th>
                <th>Total Price</th>
                <th>Order Details</th>
                <th>Options</th>
            </tr>
        </thead>
        <tbody>
            <% orders.forEach(order => { %>
                <tr>
                    <td><%= order.id %></td>
                    <td><%= order.OrderNumber %></td>
                    <td><%= order.createdAt %></td>
                    <td><%= order.updatedAt %></td>
                    <td><%= order.UserId %></td>
                    <td><%= order.Status.OrderStatus %></td>
                    <td><% let totalPrice = 0; %>
                        <% order.OrderItems.forEach(item => { %>
                            <% totalPrice += item.price * item.quantity; %>
                        <% }); %>
                        <%= totalPrice %>
                    </td>  
                 
                    <td><a href="/orders/details">See details</a></td> 
                    <td>
                        <button id="editStatus" type="button" class="btn btn-warning editStatus" data-bs-toggle="modal" data-bs-target="#editOrderModal" order-id="<%= order.id %>" status-name="<%= order.Status.id %>" order-status="<%= order.Status.OrderStatus %>">
                            <i class="bi bi-pencil"></i>
                        </button>
                    </td>
                </tr> 
            <% }) %>   
        </tbody>
    </table>
    </div>
</div>

<div class="modal fade" id="editOrderModal" tabindex="-1" role="dialog" aria-labelledby="editOrderModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editOrderModalLabel">Edit Order Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="editOrderForm">
                    <input type="hidden" id="orderId">
                    <div class="form-group">
                        <label for="orderStatus">Order Status</label>
                        <select class="form-control" id="orderstatus" required>
                                 <% statuses.forEach(status => { %>
                                   <option value="<%= status.OrderStatus %>"><%= status.OrderStatus %></option>
                                 <% }) %>
                         </select>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="saveStatus">Save changes</button>
            </div>
        </div>
    </div>
</div>
</div>
    <%- include('./partials/scripts.ejs') %>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>