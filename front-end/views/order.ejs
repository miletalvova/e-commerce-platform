<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../stylesheets/navbar.css">
    <link rel="stylesheet" href="../stylesheets/products.css">
    <link rel="stylesheet" href="../stylesheets/styles.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">   
    <title>Brands</title>
</head>
<body class="position-relative" data-bs-spy="scroll" >
    <%- include('./partials/navbar.ejs') %>
    <div class="container position-relative">

    <div class="d-flex justify-content-start p-2">
        <h3 class="mx-1">Order Items</h3>
        <span class="align-self-center">Manage current order items</span>
    </div>
    </div>
    </div>
       <div id="frame" class="container-xxl position-relative pt-4 pb-3">

        <div class="line-with-text position-absolute w-100">
            <span class="text">Order Items</span>
        </div>
   
        <div class="table-responsive">
            <table class="table table-hover table-striped table-bordered mt-4">
                <thead>
                    <tr>
                        <th>Order Id</th>
                        <th>Order Number</th>
                        <th>Product Name</th>
                        <th>Description</th>
                        <th>Image</th>
                        <th>Quantity</th>
                        <th>Price Per Item</th>
                       
                    </tr>
                </thead>
                <tbody>
                    <% orders.forEach(order => { %>
                        <% order.OrderItems.forEach(item => { %>
                        <tr>
                            <td><%= order.id %></td>
                            <td><%= order.OrderNumber %></td>
                            <td><%= item.Product.name %></td>
                            <td><%= item.Product.description %></td>
                            <td><img class="resize" src="<%= item.Product.imgurl %>" alt="Product Image"></td>
                            <td><%= item.quantity %></td>
                            <td>$<%= item.price %></td>
                        </tr>
                    <% }) %> 
                    <% }) %> 
                </tbody>
            </table>
            <div class="d-flex flex-row-reverse">
            <a href="/orders" class="btn btn-outline-info">Back to Orders</a>
            </div>
        </div>
    <%- include('./partials/scripts.ejs') %>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>